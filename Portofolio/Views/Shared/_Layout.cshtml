
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title- My Portofolio</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <nav class="navbar navbar-expand-sm bg-light justify-content-center navbar-bootsnipp animate">
        <div class="container-fluid">
            <div class="card-header">
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                </button>
                @Html.ActionLink("Portofolio", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <div class="navbar navbar-expand-sm bg-light">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" @Html.ActionLink("Home", "Index", "Home")</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" @Html.ActionLink("About", "About", "Home")</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" @Html.ActionLink("Students", "Index", "Student")</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" @Html.ActionLink("Courses", "Index", "Course")</a>
                        </li>
                    </ul>
                </div>
            </div>
            
            <form class="form-inline my-2 my-lg-0">
                <div>
                    <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </div>


                <div>
                    <a class="btn btn-secondary btn-md  float-md-right" data-test-id="signin-button" href=@Html.ActionLink("Sign in", "Index", "Student")</a>
                </div>

            </form>
        </div>          
     </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="container">
            <p>&copy; @DateTime.Now.Year - PROFILE PAGE </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>