@model Portofolio.Models.User

@{
	ViewBag.Title = "Edition";
}


 <h2>Edit Customer</h2>


@using (Html.BeginForm("ModifierUser", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", id= Model.Id }))
{
	@Html.AntiForgeryToken()
	<h4>Edit an account.</h4>
	<hr />
	@Html.ValidationSummary("", new { @class = "text-danger" })
	<div class="form-group">
		@Html.LabelFor(m => m.Nom, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.Nom, new { @class = "form-control" })

		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Prenom, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.Prenom, new { @class = "form-control" })

		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Identifiant, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.Identifiant, new { @class = "form-control" })

		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Motdepasse, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.PasswordFor(m => m.Motdepasse, new { @class = "form-control" })

		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Type, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			<select name="Type">
				<option>@Model.Type</option>
				<option value="@Portofolio.Models.TypeEnum.Admin">@Portofolio.Models.TypeEnum.Admin</option>
				<option value="@Portofolio.Models.TypeEnum.Stantard">@Portofolio.Models.TypeEnum.Stantard</option>
			</select>
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.Contact.Email, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.Contact.Email, new { @class = "form-control" })

		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.Contact.Telephone, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.Contact.Telephone, new { @class = "form-control" })

		</div>
	</div>
	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" class="btn btn-default" value="Save" />
		</div>
	</div>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}